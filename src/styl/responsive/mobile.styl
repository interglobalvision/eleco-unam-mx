$gutter = 25px

$margin-micro = 8px
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter / 1.5)
$margin-basic = ($gutter)
$margin-mid = ($gutter * 1.5)
$margin-large = ($gutter * 2)

$font-size-extra = 135px
$font-size-big = 90px
$font-size-large = 60px
$font-size-mid = 27px
$font-size-basic = 21px
$font-size-small = 18px
$font-size-tiny = 16px
$font-size-micro = 11px

.font-size-extra
  font-size: $font-size-extra * .5
.font-size-big
  font-size: $font-size-big * .5
.font-size-large
  font-size: $font-size-large * .6
.font-size-mid
  font-size: $font-size-mid * .6
.font-size-basic
  font-size: $font-size-basic * .8
.font-size-small
  font-size: $font-size-small * .8
.font-size-tiny
  font-size: $font-size-tiny * .9
.font-size-micro
  font-size: $font-size-micro * .9

grid-maker(100%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

// ADMIN

#cmb2-id-generalinfo-contact
  .mce-btn
    display: none
    &#mceu_9
      display: inline-block
// BORDER

.border-bottom
  border-bottom: 1px solid $color-black

.border-right
  border-right: 1px solid $color-black

// BACKGROUND

.background-grey-lite
  background-color: $color-grey-lite

.background-grey-dark
  background-color: $color-grey-dark

.background-yellow
  background-color: $color-yellow

// FONT COLOR

.font-color-white
  color: $color-white

// BASIC

#main-container
  min-height: 100vh

.flex-grow
  flex-grow: 1

.block-category, .post-tag
  border: 1px solid $color-black
  padding: 0 .2em

.post-tag
  border-radius: .3em

ul#social-list
  li:not(:last-of-type)
    margin-right: .5em

.margin-bottom-half-em
  margin-bottom: .5em

.p-no-margin-bottom
  p
    margin-bottom: 0

.font-size-zero
  font-size: 0

a:focus
  outline-color: $color-yellow

.background-yellow
  a:focus
    outline-color: $color-white

// FORM

input, button
  appearance: none
  background: transparent
  &:focus
    outline-color: $color-yellow

input
  border: 1px solid $color-black
  font-family: $font-sans
  padding: .2em

button
  font-family: $font-sans
  border: none
  text-decoration: underline
  padding: .2em .4em
  margin-left: 1em
  text-transform: uppercase

#mailchimp-email
  width: 100%

#mailchimp-response
  margin-top: .5em

// MENU

#header-lang
  flex: 1

ul.menu
  li
    display: inline-block
    margin-right: $margin-small

// HOME

$header-image-height = 250px

#post-featured-holder
  position: relative
  min-height: $header-image-height + ($margin-mid * 2)

#post-featured-image-holder
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  height: 100%
  width: 100%
  background-position: ($gutter / 2) center
  background-repeat: no-repeat
  background-size: auto $header-image-height
  z-index: 0

// ARTICLE

#single-header
  position: relative
  min-height: $header-image-height + ($margin-mid * 2)

#single-title-holder
  position: relative
  z-index: 1

#single-header-image-holder
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  height: 100%
  width: 100%
  background-position: center
  background-repeat: no-repeat
  background-size: auto $header-image-height
  z-index: 0

#article-content
  & > *
    display: block
    width: 100%
  p
    padding: 0 $margin-tiny
  hr.wp-block-separator
    flex-basis: 100%
    max-width: 100%
    border: 0
    height: 1px
    background-color: $color-black
    margin: $margin-basic 0 $margin-mid
  blockquote.wp-block-quote
    font-family: $font-serif
    position: relative
    p
      width: calc('(100% / 12) * 10')
      margin-left: calc('100% / 12')
      padding: 0 $margin-tiny
      font-size: $font-size-big
      margin-top: $margin-basic
    &:before
      content: '\00201C' // left double quotation mark
      position: absolute
      left: 0
      top: 0
      padding: 0 $margin-tiny
      font-size: $font-size-extra * 1.5
  .swiper-container
    background-color: $color-grey-dark
    margin: $margin-basic 0 $margin-mid
    .swiper-slide
      display: flex
      justify-content: center
      align-items: center
      width: 80vw
      cursor: pointer
    figure
      margin: 0
      max-width: 90%
      max-height: 90vh
      width: auto
      height: auto
      position: relative
      padding: $margin-mid 0
      img
        max-height: 80vh
        max-width: 100%
        height: auto
        width: auto

// SHARE

.share-options
  width: 100%
  display: none

.share-holder
  &.show
    .share-indicator
      display: none
    .share-options
      display: flex

.copy-trigger
  &:focus
    color: $color-yellow

// HOME

#home-side-row
  display: none
  order: 0

#home-highlight
  order: 1

#home-bottom-row
  order: 2

// VISIT

#map-holder
  min-height: 260px
  iframe
    height: 100%
    width: 100%

// FOOTER

#footer
  padding-top: $gutter * 5
  li.menu-item
    display: block
    a
      text-decoration: underline
#unam-logo
  height: 50px
  width: auto
