@media screen and (min-width: 1024px)

  $gutter = 35px

  $margin-micro = ($gutter / 4)
  $margin-tiny = ($gutter / 2.5)
  $margin-small = ($gutter / 1.5)
  $margin-basic = ($gutter)
  $margin-mid = ($gutter * 1.5)
  $margin-large = ($gutter * 2)

  $font-size-modifier = .7

  .font-size-extra
    font-size: $font-size-extra * $font-size-modifier
  .font-size-big
    font-size: $font-size-big * $font-size-modifier
  .font-size-large
    font-size: $font-size-large * $font-size-modifier
  .font-size-item-title
    font-size: $font-size-item-title * $font-size-modifier
  .font-size-mid
    font-size: $font-size-mid * $font-size-modifier
  .font-size-basic
    font-size: $font-size-basic * $font-size-modifier
  .font-size-small
    font-size: $font-size-small * $font-size-modifier
  .font-size-tiny
    font-size: $font-size-tiny * $font-size-modifier
  .font-size-micro
    font-size: $font-size-micro * $font-size-modifier

  grid-maker(100%, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  .desktop-only
    display: initial !important

  // BASIC

  .detail-thumb-holder
    height: 15vw
    max-height: 460px

  // MENU

  ul.menu
    li
      margin-right: $margin-small

  #header-title, #header-lang
    flex: 1;
    min-width: -webkit-min-content;

  #header-title
    order: 1

  #header-nav
    order: 2

  #header-lang
    order: 3

  // SEARCH

  $search-height = 34.5px

  #search-input
    width: calc('100vw - ' + $margin-basic)
    margin: 0 ($margin-basic / 2)

  #search-spacer
    height: $search-height

  #search-field
    padding-top: $search-height

  .search-trigger
    height: $search-height

  // ARTICLE

  $header-image-height = 375px

  #single-header
    min-height: $header-image-height + ($margin-mid * 2)

  #single-header-image-holder
    background-size: auto $header-image-height

  #article-content
    p
      padding: 0 $margin-tiny
      margin-left: 12.5%
      margin-right: 12.5%
    ul,ol
      padding: 0 $margin-mid
      margin-left: 12.5%
      margin-right: 12.5%
      ul,ol
        padding-left: $margin-small
    h2
      padding: 0 $margin-tiny
      margin-left: 12.5%
      margin-right: 12.5%
      font-size: $font-size-big * $font-size-modifier
      margin-bottom: $margin-mid
    h3
      padding: 0 $margin-tiny
      margin-left: 12.5%
      margin-right: 12.5%
      font-size: $font-size-item-title * $font-size-modifier
      margin-bottom: $margin-small
    h4, h5, h6
      padding: 0 $margin-tiny
      margin-left: 12.5%
      margin-right: 12.5%
      margin-bottom: $margin-small
    hr.wp-block-separator
      margin: $margin-small 0 $margin-basic
    blockquote.wp-block-quote
      p
        padding: 0 $margin-tiny
        font-size: $font-size-big * $font-size-modifier
        margin-top: $margin-basic
      &:before
        font-size: ($font-size-extra * $font-size-modifier) * 1.5
        padding: 0 $margin-tiny
    figure.wp-block-image
      clear: both
      img
        max-width: 75vw
        max-height: 90vh
        width: auto
        height: auto
        padding: 0 $margin-tiny
        &:only-child
          margin-left: 25vw
      figcaption
        float: left
        width: 25vw
        text-align: left
        padding: 0 $margin-tiny
        margin: 0
    .swiper-container
      margin: $margin-basic 0 $margin-mid
      figure
        padding: $margin-mid 0
      figcaption
        padding-top: $margin-tiny
    figure.wp-block-embed
      padding: 0 $margin-tiny
    .wp-block-embed, .wp-block-image
      figcaption
        font-size: $font-size-tiny * $font-size-modifier

  // HOME

  #post-featured-image-holder
    background-position: ($gutter / 2) center
    background-size: auto $header-image-height

  #home-side-row
    article:nth-child(n+4)
      display: initial

  #home-bottom-row
    article:nth-child(-n+6)
      display: none

  // VISIT

  #map-holder
    min-height: 360px

  // FOOTER

  #footer
    padding-top: $gutter * 5
