@media screen and (min-width: 720px)

  $gutter = 30px

  $margin-micro = 8
  $margin-tiny = ($gutter / 2.5)
  $margin-small = ($gutter / 1.5)
  $margin-basic = ($gutter)
  $margin-mid = ($gutter * 1.5)
  $margin-large = ($gutter * 2)

  .font-size-extra
    font-size: $font-size-extra * .5
  .font-size-big
    font-size: $font-size-big * .5
  .font-size-large
    font-size: $font-size-large * .6
  .font-size-mid
    font-size: $font-size-mid * .7
  .font-size-basic
    font-size: $font-size-basic * .7
  .font-size-small
    font-size: $font-size-small * .7
  .font-size-tiny
    font-size: $font-size-tiny * .7
  .font-size-micro
    font-size: $font-size-micro * .7

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(100%, $gutter, m)

  .mobile-only
    display: none !important

  // MENU

  ul.menu
    li
      margin-right: $margin-small

  // SEARCH

  $search-height = 34px

  #search-spacer
    height: $search-height

  // HOME

  $header-image-height = 300px

  #post-featured-image-holder
    background-position: ($gutter / 2) center
    background-size: auto $header-image-height

  #home-side-row
    display: flex
    order: 0
    article:nth-child(n+4)
      display: none

  #home-bottom-row
    article:nth-child(-n+3)
      display: none

  // ARTICLE

  #single-header
    min-height: $header-image-height + ($margin-mid * 2)

  #single-header-image-holder
    background-size: auto $header-image-height

  #article-content
    hr.wp-block-separator
      margin: $margin-basic 0 $margin-mid
    .swiper-container
      margin: $margin-basic 0 $margin-mid
      figure
        padding: $margin-mid 0

  // VISIT

  #map-holder
    min-height: 245px

  // PROGRAM
  .archive-event-future-image-holder
    text-align: right
    img
      max-height: 200px
      height: auto
      width: auto

  .archive-event-past-image-holder
    text-align: right
    img
      max-height: 100px
      height: auto
      width: auto

  // FOOTER

  // FOOTER

  #footer
    padding-top: $gutter * 5
    li.menu-item
      display: inline-block
