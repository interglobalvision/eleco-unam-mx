@media screen and (min-width: 720px)

  $gutter = 20px

  $margin-micro = ($gutter / 4)
  $margin-tiny = ($gutter / 2.5)
  $margin-small = ($gutter / 1.5)
  $margin-basic = ($gutter)
  $margin-mid = ($gutter * 1.5)
  $margin-large = ($gutter * 2)

  .font-size-extra
    font-size: $font-size-extra * .8
  .font-size-big
    font-size: $font-size-big * .8
  .font-size-large
    font-size: $font-size-large * .8
  .font-size-mid
    font-size: $font-size-mid * .8
  .font-size-basic
    font-size: $font-size-basic * .8
  .font-size-small
    font-size: $font-size-small * .8
  .font-size-tiny
    font-size: $font-size-tiny * .8
  .font-size-micro
    font-size: $font-size-micro * .8

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(100%, $gutter, m)

  font-sizes($font-size-basic * .8)

  .mobile-only
    display: none !important

  // MENU

  ul.menu
    li
      margin-right: $margin-small

  // HOME

  $header-image-height = 300px

  #post-featured-image-holder
    background-position: ($gutter / 2) center
    background-size: auto $header-image-height

  #home-side-row
    display: flex
    order: 0
    article:nth-child(n+4)
      display: none

  #home-bottom-row
    article:nth-child(-n+3)
      display: none

  // ARTICLE

  #single-header
    min-height: $header-image-height + ($margin-mid * 2)

  #single-header-image-holder
    background-size: auto $header-image-height

  #article-content
    hr.wp-block-separator
      margin: $margin-basic 0 $margin-mid
    .swiper-container
      margin: $margin-basic 0 $margin-mid
      figure
        padding: $margin-mid 0

  // FOOTER

  #footer
    padding-top: $gutter * 5
