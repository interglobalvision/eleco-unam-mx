@import '~kouto-swiss/index.styl'
@import '~globie-styl-library/helpers'
@import '~swiper/dist/css/swiper.css'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()


// ******************************************************

// GRID

@import '~globie-styl-library/grid'

// ******************************************************

// FONTS
@import 'fonts/fonts'

$font-sans = 'Garnett Light', font-stack('Helvetica')
$font-serif = 'Wremena', font-stack('Georgia')

// ******************************************************

// TYPOGRAPHY

@import '~globie-styl-library/type'

$font-size-larger = 1.3rem

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

html
  font-family: $font-sans
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif
  line-height: 1em

.font-larger
  font-size: $font-size-larger

.line-tighter
  line-height: $font-leading-tighter

.line-larger
  line-height: $font-leading-larger

em, i, .font-italic
  font-family: 'Garnett Light Italic', font-stack('Helvetica')
  font-style: italic

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)
$color-grey-lite = rgb(216, 216, 216)
$color-grey-dark = rgb(45, 45, 45)
$color-yellow = rgb(255, 245, 105)
$color-blue = rgb(229, 242, 255)

// ******************************************************

// BASIC

html
  color: $color-black
  background-color: $color-white

img
  height: auto
  max-width: 100%

.mobile-only
  display: initial !important

.not-mobile
  display: none !important

.desktop-only
  display: none !important

// ******************************************************

// ELLIPSE

@keyframes ellipse-1
  from
    opacity: 0
  25%
    opacity: 1

@keyframes ellipse-2
  from
    opacity: 0
  50%
    opacity: 1

@keyframes ellipse-3
  from
    opacity: 0
  75%
    opacity: 1

.ellipse span
  animation: ellipse-1 500ms infinite steps(1)

.ellipse span:first-child + span
  animation-name: ellipse-2

.ellipse span:first-child + span + span
  animation-name: ellipse-3

// ******************************************************

// MEDIA QUERIES

@import 'responsive/mobile'

@import 'responsive/tablet-portrait'

@import 'responsive/tablet-landscape'

@import 'responsive/laptop'

@import 'responsive/desktop'

@import 'responsive/hd'

